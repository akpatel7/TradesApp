<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - BCA Trades Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Scripts/select2-3.4.5/select2.css" rel="stylesheet" /> 
    <link href="~/Content/moment-datepicker/datepicker.css" rel="stylesheet" />
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/jqueryUIBootstrapCSS")
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script type="text/javascript">
        var baseUrl = "@Url.Content("~")";
    </script>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div>
                <p class="site-title">
                    <img src="~/Content/images/BCA_research_logo.png" />@Html.ActionLink(" BCA Trades Application", "Index", "Home")</p>
            </div>
            <div>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Trades List", "Index", "Trade")</li>
                        <li>@Html.ActionLink("Trades Creation", "Create", "Trade")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <div class="container">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - BCA Research Inc.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    <script src="~/Scripts/select2-3.4.5/select2.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/moment-datepicker.js"></script>
    <script src="~/Scripts/moment-with-langs.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
