        <script type="text/javascript">
            $(document).ready(function () {

                //init form custom controls
                $("#BenchmarkTypeAhead").select2({ placeholder: "{Benckmark Selection}" });
                $("#relBenchmarkTypeAhead").select2({ placeholder: "{Benckmark Selection}" });
                $(".tradableThingList").select2({ placeholder: "{Financial Instrument}" });
