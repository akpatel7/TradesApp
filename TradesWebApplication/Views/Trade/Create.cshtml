                $("#absCurrencyTypeAhead").select2({ placeholder: "{Currency Selection}" });
                $("#relCurrencyTypeAhead").select2({ placeholder: "{Currency Selection}" });
                $('#dpInstructionEntry').datepicker();
                $('#dpInstructionExit').datepicker();
            });
            
            //to invoke validation on razor - Not working
            $('#dpInstructionEntry').datepicker()
                .on('changeDate', function(ev) {
                    $('#dpInstructionEntryText').keyup();
                    $('#dpInstructionEntryText').click();
                });

            
            //to block traditonal posting, and divert to API            
            $(function () {
                $('form').submit(function () {
                    if (!$(this).valid()) {
                        // standard client validation failed => prevent submission
                        alert('Validation failed: Please check form for errors');
                        return false;    
                    }
                    //alert('Can create Trade!');
                    vm.saveTradeData();
                    return false;

                });
            });

        </script>
    }
